{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@theme-hope/*": ["node_modules/vuepress-theme-hope/lib/client/*"],
      "vuepress-theme-hope/*": ["node_modules/vuepress-theme-hope/lib/*"],
    },
    "types": [
      "vuepress/client-types"
    ]
  },
  "include": [
    "env.d.ts",
    "src/.vuepress/**/*.ts",
    "src/.vuepress/**/*.js",
    "src/.vuepress/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "draft"]
}
